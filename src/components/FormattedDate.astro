---
import { Icon } from "astro-icon/components";

interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<Icon name="mingcute:calendar-2-line" />
<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
