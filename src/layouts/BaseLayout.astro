---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FloatButtons from "@/components/FloatButtons.astro";
import type { ImageMetadata } from "astro";
import type { HTMLAttributes } from "astro/types";

type Props = {
  title: string;
  description: string;
  image?: ImageMetadata;
  maxw?: string;
  bodyClass?: string;
} & HTMLAttributes<"div">;

const {
  title,
  description,
  image,
  maxw = "max-w-230",
  class: className,
  bodyClass,
  ...props
} = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>
  <body class={bodyClass}>
    <div class="app">
      <Header />
      <main
        class=`main-content ${maxw} min-h-screen m-auto px-4 pt-(--main-pt) ${className}`
        {...props}
      >
        <slot />
      </main>
      <Footer />
      <FloatButtons />
    </div>
  </body>
</html>

<style>
  body {
    --main-pt: calc(var(--spacing) * 20);
  }
</style>
